<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/viewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="TEXT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/viewEditText"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginTop="50dp"

        android:hint="Ведите текст"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        ></EditText>
    <Button
        android:id="@+id/viewButtonKeepPref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить в преференсис"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/viewTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         ></Button>
    <Button
        android:id="@+id/viewButtonOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="вывести значение"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/viewButtonKeepPref"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        ></Button>

</androidx.constraintlayout.widget.ConstraintLayout>