<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/view_imagine_list"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_baseline_account_box_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/view_name_list"
        android:hint="NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/view_imagine_list"
        ></TextView>
    <TextView
        android:id="@+id/view_number_list"
        android:hint="Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/view_name_list"
        app:layout_constraintLeft_toRightOf="@id/view_imagine_list"

        ></TextView>

<ImageButton
    android:id="@+id/viewButtonCall"
    android:layout_width="40dp"
    android:layout_height="40dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:padding="20dp"
    android:src="@drawable/ic_baseline_call_24"
    android:background="@color/cardview_light_background"
    ></ImageButton>
</androidx.constraintlayout.widget.ConstraintLayout>