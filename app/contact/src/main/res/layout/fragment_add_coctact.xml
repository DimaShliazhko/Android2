<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/TAG"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="Fragmrnt_add_contact">

    <ImageView
        android:id="@+id/viewFrAddImag"
        android:layout_width="35pt"
        android:layout_height="35pt"
        android:src="@drawable/ic_baseline_people_24"
        app:layout_constraintBottom_toBottomOf="@+id/viewFrAddNum"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        ></ImageView>

    <EditText
        android:id="@+id/viewFrAddName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Введите имя"
        app:layout_constraintLeft_toRightOf="@+id/viewFrAddImag"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <EditText
        android:id="@+id/viewFrAddNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Введите номер"
        app:layout_constraintLeft_toRightOf="@+id/viewFrAddImag"
        app:layout_constraintTop_toBottomOf="@id/viewFrAddName"
        android:inputType="number"
        ></EditText>
    <Button
        android:id="@+id/viewSaмeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        app:layout_constraintRight_toRightOf="parent"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>