<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent">

    <EditText
        android:id="@+id/searchText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Поиск контактов"
        android:queryHint="Поиск контактов"
        android:textSize="30sp"

        app:layout_constraintTop_toTopOf="parent"></EditText>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/viewRecyclecView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchText"></androidx.recyclerview.widget.RecyclerView>

    <ImageButton
        android:id="@+id/viewAddContactClick"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="50dp"

        android:background="@color/cardview_light_background"
        android:src="@drawable/ic_baseline_add_circle_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"></ImageButton>
</androidx.constraintlayout.widget.ConstraintLayout>